<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
  <title> DayDayUp </title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>


<style>
    body {
      background-image: url('../images2.jpg');
      background-position: top left;
      background-attachment: fixed;
      background-repeat: no-repeat;
      background-size: cover;
    }
    .contain{
      margin: auto;
      padding-top: 50px;
      align-items: center;
      width: 500px;
    }
    .description {
        margin-top: 110px;
        margin-bottom: 60px;
        color: #fff;
        font-family: "Times New Roman", Times, serif;
        margin-left: auto;
        margin-right: auto;
        width: 500px;
        text-align: center;
        font-size: 20px;
    }

    .Userimage {
      border-radius: 50%;
      display: block;
      margin: 0 auto;
      height: 40px;
      width: 40px;
      border-radius: 25px;
      margin-top: 5px;
    }

    .title {
      text-align: left;
      font-size: 18px;
      font-family: Arial, Helvetica, sans-serif;
      text-transform: uppercase;
    }

    .userName {
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
    }

    .content {
      text-align: left;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 16px;
      color: black;
      text-transform: lowercase;
      padding-bottom: 5px;
      font-weight: lighter;
    }

    .center-table {
      margin-top: 50px;
      margin-left: auto;
      margin-right: auto;
   /*   border: 1px solid;*/
    }
    th {
/*      border: 1px solid;*/
      width: 400px;
      height: 40px;
    }

    .ranking1 {
      transform: rotate(15deg);
      -ms-transform: rotate(15deg);
      -webkit-transform: rotate(15deg);
      font-size: 50px;
      text-align: center;
      vertical-align: top;
      color: #FFD700;
    }

    .ranking2 {
      transform: rotate(15deg);
      -ms-transform: rotate(15deg);
      -webkit-transform: rotate(15deg);
      font-size: 50px;
      text-align: center;
      vertical-align: top;
      color: #cccccc;
    }

    .ranking3 {
      transform: rotate(15deg);
      -ms-transform: rotate(15deg);
      -webkit-transform: rotate(15deg);
      font-size: 50px;
      text-align: center;
      vertical-align: top;
      color: #CD853F;
    }

    .ranking {
      transform: rotate(15deg);
      -ms-transform: rotate(15deg);
      -webkit-transform: rotate(15deg);
      font-size: 50px;
      text-align: center;
      vertical-align: top;
      color: black;
    }
    </style>
  <body>

    <!-- Navbar -->
   <!--   -->
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Day Day Up</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <% if(logIn == true){%>
                <li><a href="/home">Home</a></li>
                <li><a href="/schedule">My moment</a></li>
                <li><a href="/logout">Logout</a></li>
              <% }else{ %>
                <li><a href="/home">Home</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Sign Up</a></li>
              <%}%>
            </ul>
            <% if(logIn == true){%>
              <li style="float: right; padding-top: 5px; color: gray;"><img src=<%= user.local.imagePath %> height="40" width="40" style="border-radius: 25px;" />&nbsp&nbsp<%= user.local.email %></li>
            <% } %>
          </div>
        </div>
      </nav>

      <!-- end of navigation bar-->
      <p class="description"> DayDayUp is a social media website which is designed to help you set up goals and motivate you to stick to them. Create your account and start from today. </p>



      <p><%for(var i = 0; i < schedules.length; i++) {%>
        <table class="center-table" style="margin-top: 20px; margin-bottom: 10px; box-shadow: 4px 4px 4px #999;">
          <tr>
          <%if(i == 0) {%>
            <th rowspan="2" style="width: 100px; text-shadow: 4px 4px 4px #999;" class="ranking1"><%=i + 1%></th>
          <%} else if(i == 1) {%>
            <th rowspan="2" style="width: 100px; text-shadow: 4px 4px 4px #999;" class="ranking2"><%=i + 1%></th>
          <%} else if(i == 2) {%>
            <th rowspan="2" style="width: 100px; text-shadow: 4px 4px 4px #999;" class="ranking3"><%=i + 1%></th>
          <%} else {%>
            <th rowspan="2" style="width: 100px; text-shadow: 4px 4px 4px #999;" class="ranking"><%=i + 1%></th>
          <%}%>
            <th style="width:180px; background-color: rgba(255,255,255,0.5);" ><img src="../default.jpg" class="Userimage"></th>
            <th class="title" style= "background-color: rgba(255,255,255,0.5);">
              <% if(logIn == true){%>
              <% console.log("user id: " + user._id);
              console.log("creator id: " + schedules[i].creator._id);
              %>
              <% if(user._id.toString() === schedules[i].creator._id.toString()){%>
              <% console.log("compare is true");
              %>
              <a href="/schedule/<%= schedules[i]._id %>"><%=schedules[i].title%></a>
              <% }else{ %>
              <a href="/home/<%= schedules[i]._id %>"><%=schedules[i].title%></a>
              <% } %>
              <% }else{ %>
              <a href="/home/<%= schedules[i]._id %>"><%=schedules[i].title%></a>
              <% } %>
            </th>
          </tr>
          <tr>
            <th class="userName" style="width:180px; background-color: rgba(255,255,255,0.5);"><%=schedules[i].creator.local.email%></th>
            <th class="content " style= "background-color: rgba(255,255,255,0.5);"><%=schedules[i].descrip%></th>
          </tr>
        </table>
        <%}%>
      </p>

  </body>

</html>
